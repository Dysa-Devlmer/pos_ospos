#--------------------------------------------------------------------
# CONFIGURACION OSPOS PARA XAMPP - RESTAURANTES
# Archivo optimizado para portabilidad entre sucursales
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = development
CI_DEBUG = false

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.appTimezone = 'America/Mexico_City'

#--------------------------------------------------------------------
# DATABASE - XAMPP Configuration
#--------------------------------------------------------------------

database.default.hostname = 'localhost'
database.default.database = 'ospos_restaurante'
database.default.username = 'root'
database.default.password = ''
database.default.DBDriver = 'MySQLi'
database.default.DBPrefix = 'ospos_'
database.default.port = 3306

database.development.hostname = 'localhost'
database.development.database = 'ospos_restaurante'
database.development.username = 'root'
database.development.password = ''
database.development.DBDriver = 'MySQLi'
database.development.DBPrefix = 'ospos_'
database.development.port = 3306

#--------------------------------------------------------------------
# EMAIL - Configurar segun proveedor del restaurante
#--------------------------------------------------------------------

email.SMTPHost = ''
email.SMTPUser = ''
email.SMTPPass = ''
email.SMTPPort = 587
email.SMTPTimeout = 5
email.SMTPCrypto = 'tls'

#--------------------------------------------------------------------
# ENCRYPTION - Clave unica por instalacion
#--------------------------------------------------------------------

encryption.key = 'restaurante_ospos_2024_clave_segura_12345678901234567890'

#--------------------------------------------------------------------
# LOGGER - Activado para debugging
#--------------------------------------------------------------------

logger.threshold = 4
app.db_log_enabled = true
app.db_log_only_long = false

#--------------------------------------------------------------------
# CONFIGURACIONES ESPECIFICAS PARA RESTAURANTES
#--------------------------------------------------------------------

# Configuraciones que se pueden personalizar por sucursal
# (estas se configuran desde el panel de administracion)

